<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/totalBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="80dp"
        android:text="Total bill "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bill"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:text="bill"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/viewBill"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="@+id/viewBill"
        app:layout_constraintTop_toBottomOf="@+id/ViewTotalBill" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="424dp"
        android:onClick="tipPercentageButton"
        android:text="15%"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="424dp"
        android:onClick="tipPercentageButton"
        android:text="10%"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="424dp"
        android:onClick="tipPercentageButton"
        android:text="20%"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LayoutTipEnter"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="50dp"
        android:hint="Tip percentage"
        app:boxStrokeColor="#2196F3"
        app:endIconMode="clear_text"
        app:hintTextColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutAmountEnter"
        app:placeholderText="Enter your Tip percentage(%)"
        app:placeholderTextColor="#7F8C8D">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputTipEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/viewTip"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="$0.00"
        android:textAlignment="center"
        android:textColor="#01579B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tip"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="@+id/tip"
        app:layout_constraintTop_toBottomOf="@+id/tip" />

    <TextView
        android:id="@+id/tip"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="92dp"
        android:text="tip"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewTotalBill" />

    <TextView
        android:id="@+id/ViewTotalBill"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:maxLength="20"
        android:text="$0.00"
        android:textAlignment="center"
        android:textColor="#01579B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/totalBill"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/totalBill"
        app:layout_constraintTop_toBottomOf="@+id/totalBill" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LayoutAmountEnter"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="50dp"
        android:hint="Your amount"
        app:boxStrokeColor="#2196F3"
        app:endIconMode="clear_text"
        app:endIconTint="#989595"
        app:hintTextColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/LayoutTipEnter"
        app:layout_constraintStart_toStartOf="@+id/LayoutTipEnter"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderText="Enter your amount"
        app:placeholderTextColor="#7F8C8D">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputAmountEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal|numberSigned"
            android:maxLength="20"
            android:textColor="#000000"
            app:textInputLayoutFocusedRectEnabled="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/viewBill"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:text="$0.00"
        android:textAlignment="center"
        android:textColor="#01579B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/viewTip"
        app:layout_constraintTop_toBottomOf="@+id/bill" />

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#F10707"
        app:layout_constraintBottom_toTopOf="@+id/LayoutAmountEnter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTip"
        app:layout_constraintVertical_bias="0.56" />

</androidx.constraintlayout.widget.ConstraintLayout>